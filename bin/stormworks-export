#!/bin/bash
# Wrapper script for stormworks headless image export

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VIM_SCRIPT="$SCRIPT_DIR/stormworks-export.vim"

if ! command -v nvim &> /dev/null; then
  echo "Error: nvim not found in PATH" >&2
  exit 1
fi

exec nvim --headless --noplugin -u NONE -S "$VIM_SCRIPT" -- "$@"
